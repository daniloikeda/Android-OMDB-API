<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/scrollView_layout"
    android:background="#ff2e2d2c">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#00000000">

                <EditText
                    android:id="@+id/input_movie_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:hint="@string/hint_name"
                    android:textColorHint="#ff9d9d9d"
                    android:textColor="#ffdddddd" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/search_button"
                    android:text="Procurar"
                    android:textColor="#ffffff"
                    android:background="@drawable/border"
                    android:focusable="true" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/information_layout">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:alpha="0.9">
                    <LinearLayout
                        android:id="@+id/name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/download"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/background_image"
                            android:layout_width="0dp"
                            android:layout_height="300dp"
                            android:layout_weight="0.4"
                            android:layout_toLeftOf="@+id/title"
                            />
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:layout_toLeftOf="@+id/year"
                            android:textColor="#ffffff"
                            android:textSize="40dp"
                            android:autoText="true" />
                        <TextView
                            android:id="@+id/year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="5dp"
                            android:layout_toLeftOf="@+id/download"
                            android:gravity="bottom"
                            android:textColor="#ffffff"
                            android:textSize="25dp"
                            android:autoText="true" />
                    </LinearLayout>
                        <TextView
                            android:id="@+id/runtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name_layout"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="25dp"
                            android:text="121 min"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:id="@+id/genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/runtime"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="25dp"
                            android:textColor="#ffffff"/>
                        <Button
                            android:id="@+id/download"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/download"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="#000000"
                        android:alpha="0.8">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imdb_layout">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:id="@+id/imdb_icon"
                                android:src="@drawable/imdb"/>
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/star_icon"
                                android:layout_below="@+id/imdb_icon"
                                android:src="@drawable/star"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/star_icon"
                                android:layout_below="@+id/imdb_icon"
                                android:layout_alignParentBottom="true"
                                android:id="@+id/rating"
                                android:textSize="15sp"
                                android:textColor="#ffffff"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imdb_layout"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffff"
                            android:textSize="25sp"
                            android:id="@+id/plot"/>
                    </RelativeLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:alpha="0.6">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Diretor: "
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/director"
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:alpha="0.6">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Escritor: "
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/writer"
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:alpha="0.6">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Atores: "
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/actors"
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:alpha="0.6">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Lançamento: "
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/release"
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:alpha="0.6">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="Idioma: "
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/language"
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="1dp"
                            android:orientation="horizontal"
                            android:background="#000000"
                            android:alpha="0.6">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:text="País: "
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/country"
                                android:textSize="25sp"
                                android:textColor="#ffffff"/>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="83dp"
                android:indeterminateDrawable="@drawable/progressbar_rotation"
                android:indeterminate="false"
                android:visibility="gone"/>
        </LinearLayout>
</ScrollView>